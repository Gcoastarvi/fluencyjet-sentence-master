// Redirect root-level Prisma schema to the server schema
// This preserves compatibility with Railway and keeps real schema in server/prisma/schema.prisma

// DO NOT EDIT THIS FILE
// Real schema is inside server/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

