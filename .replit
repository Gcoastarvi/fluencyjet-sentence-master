modules = ["nodejs-22", "web"]

run = "bash start-replit.sh"

hidden = [
  ".config",
  ".git",
  "generated-icon.png",
  "node_modules",
  "client/node_modules",
  "dist",
  "client/dist",
]

[nix]
channel = "stable-24_05"

[env]
HOST = "0.0.0.0"

[[ports]]
localPort = 8080
externalPort = 80

# ðŸ‘‡ Add this line to auto-open your preview window
onRun = "open-url http://localhost:8080"

[workflows]

[[workflows.workflow]]
name = "Start Application"
mode = "sequential"
author = 47616575

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-replit.sh"
