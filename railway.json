{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "ignoreDockerfile": true,
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["npm install --no-audit --no-fund"]
        },
        "build": {
          "cmds": ["npm run build"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node dist/index.js"
  },
  "nixpacks": {
    "env": {
      "NIXPACKS_NODE_VERSION": "22"
    }
  }
}
