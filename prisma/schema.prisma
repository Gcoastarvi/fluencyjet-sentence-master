datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  hasAccess Boolean  @default(false)
  xp        Int      @default(0)
  streak    Int      @default(0)
  createdAt DateTime @default(now())
}

model Lesson {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  isFree    Boolean  @default(false)
  createdAt DateTime @default(now())
}
