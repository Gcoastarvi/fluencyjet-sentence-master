{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nodejs",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "NODE_ENV=production node index.js",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "always"
  },
  "providers": ["nodejs"]
}
